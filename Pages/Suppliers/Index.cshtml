@page
@model PharmaSys.Pages.Suppliers.IndexModel
@{
    ViewData["Title"] = "Fournisseurs";
}

<div class="d-flex align-items-start justify-content-between mb-3">
    <div>
        <h2 class="fw-bold mb-1">Gestion des Fournisseurs</h2>
        <div class="text-muted">@Model.Suppliers.Count fournisseurs enregistrés</div>
    </div>

    <a class="btn btn-primary btn-pill" href="/Suppliers/Create">
        <i class="bi bi-plus-lg me-2"></i>Nouveau Fournisseur
    </a>
</div>

@if (TempData["Success"] is string okMsg)
{
    <div class="alert alert-success d-flex align-items-center gap-2">
        <i class="bi bi-check2-circle"></i>
        <div>@okMsg</div>
    </div>
}

<div class="card-soft p-3">
    <div class="d-flex gap-2 mb-3">
        <div class="searchbox d-flex align-items-center gap-2" style="flex:1;">
            <i class="bi bi-search text-muted"></i>
            <input id="qSup" placeholder="Rechercher par nom, téléphone, email..." />
        </div>
    </div>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>NOM</th>
                    <th>TÉLÉPHONE</th>
                    <th>EMAIL</th>
                    <th>ADRESSE</th>
                    <th class="text-end">ACTIONS</th>
                </tr>
            </thead>
            <tbody id="supRows">
                @foreach (var s in Model.Suppliers)
                {
                    <tr>
                        <td class="fw-semibold">@s.Name</td>
                        <td class="text-muted">@(!string.IsNullOrWhiteSpace(s.Phone) ? s.Phone : "—")</td>
                        <td class="text-muted">@(!string.IsNullOrWhiteSpace(s.Email) ? s.Email : "—")</td>
                        <td class="text-muted">@(!string.IsNullOrWhiteSpace(s.Address) ? s.Address : "—")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-light btn-pill" href="/Suppliers/Edit?id=@s.Id" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-sm btn-light btn-pill" href="/Suppliers/Delete?id=@s.Id" title="Supprimer">
                                <i class="bi bi-trash text-danger"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        const q = document.getElementById('qSup');
        q?.addEventListener('input', () => {
          const v = q.value.toLowerCase();
          document.querySelectorAll('#supRows tr').forEach(tr => {
            tr.style.display = tr.innerText.toLowerCase().includes(v) ? '' : 'none';
          });
        });
    </script>
}
