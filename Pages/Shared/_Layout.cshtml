@using Microsoft.AspNetCore.Identity
@using PharmaSys.Data
@using PharmaSys.Services

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject AlertService AlertService

@{
    var alertsCount = await AlertService.GetAlertsCountAsync(30);

    string path = Context.Request.Path.Value?.ToLower() ?? "/";
    bool IsActive(string p) => path.StartsWith(p);
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Utopia Pharmacie</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            background: #f5f7fb;
        }

        .app-shell {
            min-height: 100vh;
        }

        .sidebar {
            width: 270px;
            background: #fff;
            border-right: 1px solid #e9edf5;
        }

        .brand-icon {
            width: 42px;
            height: 42px;
            border-radius: 14px;
            background: #2f6df6;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .nav-item-link {
            display: flex;
            align-items: center;
            gap: .7rem;
            padding: .75rem .9rem;
            border-radius: 12px;
            color: #334155;
            text-decoration: none;
        }

            .nav-item-link:hover {
                background: #f2f6ff;
            }

            .nav-item-link.active {
                background: #eef4ff;
                color: #2f6df6;
                font-weight: 600;
            }

        .topbar {
            background: #fff;
            border-bottom: 1px solid #e9edf5;
        }

        .searchbox {
            background: #f3f6fb;
            border: 1px solid #edf1f7;
            border-radius: 14px;
            padding: .6rem .9rem;
            width: 560px;
            max-width: 100%;
        }

            .searchbox input {
                border: 0;
                outline: 0;
                background: transparent;
                width: 100%;
            }

        .btn-pill {
            border-radius: 14px;
            padding: .6rem 1rem;
        }
    </style>
</head>

<body>
    <div class="d-flex app-shell">

        <!-- SIDEBAR -->
        <aside class="sidebar d-flex flex-column">
            <div class="p-3 d-flex align-items-center gap-2">
                <div class="brand-icon"><i class="bi bi-capsule"></i></div>
                <div>
                    <div class="fw-bold">Utopia Pharmacie</div>
                    <div class="text-muted" style="font-size:12px;">Système de gestion</div>
                </div>
            </div>

            <div class="px-3">
                <a class="nav-item-link @(IsActive("/dashboard") || path == "/" ? "active" : "")"
                   href="/Dashboard/Index">
                    <i class="bi bi-house"></i> Tableau de bord
                </a>

                <a class="nav-item-link @(IsActive("/medications") ? "active" : "")"
                   href="/Medications/Index">
                    <i class="bi bi-capsule-pill"></i> Médicaments
                </a>

                <a class="nav-item-link @(IsActive("/alerts") ? "active" : "")"
                   href="/Alerts/Index">
                    <i class="bi bi-exclamation-triangle"></i> Alertes
                    @if (alertsCount > 0)
                    {
                        <span class="ms-auto badge rounded-pill bg-danger">@alertsCount</span>
                    }
                </a>

                <a class="nav-item-link @(IsActive("/sales") ? "active" : "")"
                   href="/Sales/Index">
                    <i class="bi bi-cart"></i> Ventes
                </a>

                <a class="nav-item-link @(IsActive("/clients") ? "active" : "")"
                   href="/Clients/Index">
                    <i class="bi bi-people"></i> Clients
                </a>

                <a class="nav-item-link @(IsActive("/suppliers") ? "active" : "")"
                   href="/Suppliers/Index">
                    <i class="bi bi-box-seam"></i> Fournisseurs
                </a>

                <a class="nav-item-link @(IsActive("/supplierorders") ? "active" : "")"
                   href="/SupplierOrders/Index">
                    <i class="bi bi-clipboard-check"></i> Commandes
                </a>

                <a class="nav-item-link @(IsActive("/reports") ? "active" : "")"
                   href="/Reports/Index">
                    <i class="bi bi-bar-chart"></i> Rapports
                </a>
            </div>
        </aside>

        <!-- MAIN -->
        <div class="flex-grow-1 d-flex flex-column">

            <!-- TOPBAR -->
            <div class="topbar px-4 py-3 d-flex align-items-center justify-content-between">

                <!-- ✅ UNE SEULE BARRE DE RECHERCHE -->
                <form class="d-flex align-items-center gap-2 searchbox"
                      method="get" action="/Search/Index">
                    <i class="bi bi-search text-muted"></i>
                    <input name="q"
                           id="globalSearch"
                           value="@(Context.Request.Query["q"])"
                           placeholder="Rechercher un médicament, client, facture..." />
                </form>

                <div class="d-flex align-items-center gap-3">

                    <!-- ALERTES -->
                    <a class="btn btn-light position-relative btn-pill" href="/Alerts/Index" title="Alertes">
                        <i class="bi bi-bell"></i>
                        @if (alertsCount > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @alertsCount
                            </span>
                        }
                    </a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var u = await UserManager.GetUserAsync(User);
                        var initials = (u?.FullName ?? "Admin")
                        .Split(' ', StringSplitOptions.RemoveEmptyEntries)
                        .Take(2)
                        .Select(x => x[0])
                        .Aggregate("", (a, b) => a + b)
                        .ToUpper();

                        <!-- ✅ USER DROPDOWN + LOGOUT (FIXED) -->
                        <div class="dropdown">
                            <button class="btn btn-light d-flex align-items-center gap-2 dropdown-toggle btn-pill"
                                    data-bs-toggle="dropdown" aria-expanded="false">

                                <div class="rounded-circle"
                                     style="width:38px;height:38px;background:#2f6df6;color:#fff;
                        display:flex;align-items:center;justify-content:center;font-weight:600;">
                                    @initials
                                </div>

                                <span class="d-none d-md-block">@u?.FullName</span>
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li class="px-3 py-2">
                                    <strong>@u?.FullName</strong><br />
                                    <small class="text-muted">@u?.RoleLabel</small>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <!-- ✅ LOGOUT ONLY -->
                                <li>
                                    <form asp-area="Identity"
                                          asp-page="/Account/Logout"
                                          asp-route-returnUrl="/"
                                          method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right"></i> Déconnexion
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-pill" href="/Identity/Account/Login">
                            Connexion
                        </a>
                    }
                </div>
            </div>

            <!-- CONTENT -->
            <main class="p-4 flex-grow-1">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Empêche recherche vide
        const input = document.getElementById("globalSearch");
        if (input) {
            input.addEventListener("keydown", e => {
                if (e.key === "Enter" && !input.value.trim()) {
                    e.preventDefault();
                }
            });
        }

        // Ctrl + K => focus search
        document.addEventListener("keydown", e => {
            if (e.ctrlKey && (e.key === "k" || e.key === "K")) {
                e.preventDefault();
                input?.focus();
            }
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
